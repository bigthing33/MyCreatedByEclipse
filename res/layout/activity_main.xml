<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/commonMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="常用的方法" />

            <Button
                android:id="@+id/velocityTrackerTest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="滑动速度追踪" />

            <Button
                android:id="@+id/gestureDetectortest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="手势动作的检测" />

            <Button
                android:id="@+id/scoller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="弹性滑动" />
            <Button
                android:id="@+id/sendHttpRequest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="发送一个网络请求" />
            <Button
                android:id="@+id/customWidget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="自定义一个控件" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>