<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.testdemo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:name="com.example.testdemo.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.testdemo.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.testdemo.activity.VelocityTrackerTestAcitvity" >
        </activity>
        <activity android:name="com.example.testdemo.activity.GestureDetectorTestAcitvity" >
        </activity>
        <activity
            android:name="com.example.testdemo.activity.CommonCodeActivity"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity android:name="com.example.testdemo.activity.SendHttpRequestActivity" >
        </activity>
        <activity android:name="com.example.testdemo.activity.CustomWidgetAcitvity" >
        </activity>
        <activity android:name="com.example.testdemo.activity.NotificationActivity" >
        </activity>
        <activity android:name="com.example.testdemo.activity.ScollerAcitvity" >
        </activity>
        <activity android:name="com.example.testdemo.activity.CompareActivity" >
        </activity>
        <activity android:name="com.example.testdemo.activity.AnimationActivity" >
        </activity>
        <activity
            android:name="com.example.testdemo.activity.Ntificarion_RemoteActivity"
            android:process=":remote" >
        </activity>
        <activity android:name="com.example.testdemo.activity.DrawableDemoActivity" >
        </activity>
        <activity android:name="com.example.testdemo.activity.AttrAnimationActivity" >
        </activity>
        <activity android:name="com.example.testdemo.activity.WindowActivity" >
        </activity>
        <activity android:name="com.example.testdemo.activity.HandlerMechanismActivity" >
        </activity>
        <activity android:name="com.example.testdemo.activity.ImageLoaderActivity" >
        </activity>
        <activity android:name="com.example.testdemo.activity.ApiStoreActivity" >
        </activity>
        <activity android:name="com.example.testdemo.activity.WebViewActivity" >
        </activity>

        <receiver android:name="com.example.testdemo.widget.MyAppWidgetProvider" >
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/appwidget_provider_info" >
            </meta-data>

            <intent-filter>
                <action android:name="com.ryg.chapter_5.action.CLICK" />
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.example.testdemo.widget.TestAppWidget" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <!-- 这个Intent不支持在配置文件里的注册 所以这个是没用的 -->
                <!-- <actionandroid:name ="android.intent.action.TIME_TICK"/> -->
            </intent-filter>
            <intent-filter>

                <!-- 将IntentAction 手动配置在 mainset文件上 -->
                <action android:name="com.sinxiao.app.fresh" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/test_appwidget_provider_info" />
        </receiver>

        <service android:name="com.example.testdemo.services.CompareService" >
        </service>
        <service android:name="com.example.testdemo.services.AIDLCompareService" >
        </service>

        <meta-data
            android:name="UMENG_CHANNEL"
            android:value="100004" >
        </meta-data>
        <meta-data
            android:name="metaTest"
            android:value="metaTest" >
        </meta-data>
    </application>

</manifest>